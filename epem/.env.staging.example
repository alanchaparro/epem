# Staging environment example (copy to .env.staging)

# API/Gateway
API_GATEWAY_URL=http://staging-api.your-domain
JWT_SECRET=please-set-a-strong-access-secret
JWT_REFRESH_SECRET=please-set-a-strong-refresh-secret
CORS_ORIGIN=http://staging-web.your-domain
DEFAULT_ORIGIN=http://staging-web.your-domain

# Databases (adjust host/user/password)
USERS_SERVICE_DATABASE_URL=mysql://epem_app:StrongPass!@mysql:3306/epem_users
PATIENTS_SERVICE_DATABASE_URL=mysql://epem_app:StrongPass!@mysql:3306/epem
CATALOG_SERVICE_DATABASE_URL=mysql://epem_app:StrongPass!@mysql:3306/epem_catalog
BILLING_SERVICE_DATABASE_URL=mysql://epem_app:StrongPass!@mysql:3306/epem_billing

# Internal service URLs (Docker network or VPC-internal)
USERS_SERVICE_URL=http://users-service:3020
PATIENTS_SERVICE_URL=http://patients-service:3010
CATALOG_SERVICE_URL=http://catalog-service:3030
BILLING_SERVICE_URL=http://billing-service:3040

# Cookies
COOKIE_DOMAIN=.your-domain
COOKIE_SECURE=true
COOKIE_SAMESITE=Strict

# Frontend
NEXT_PUBLIC_API_URL=http://staging-web.your-domain

# Observability (optional)
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=change-this-password

