// Cliente Prisma para patients-service
generator client {
  provider      = "prisma-client-js"
  output        = "../generated/client"
  binaryTargets = ["native", "debian-openssl-3.0.x", "windows"]
}

// Conexi√≥n a MySQL definida en .env (PATIENTS_SERVICE_DATABASE_URL)
datasource db {
  provider = "mysql"
  url      = env("PATIENTS_SERVICE_DATABASE_URL")
}

// Modelo principal de pacientes
model Patient {
  id               String   @id @default(uuid())
  dni              String   @unique
  firstName        String
  lastName         String
  birthDate        DateTime
  phone            String?  @db.VarChar(50)
  email            String?  @db.VarChar(191)
  address          String?  @db.VarChar(255)
  emergencyContact String?  @db.VarChar(255)
  allergies        String?  @db.Text
  notes            String?  @db.Text
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
