// Genera el cliente en un directorio dedicado del servicio para
// evitar colisiones con otros microservicios en el monorepo.
generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
  binaryTargets = ["native", "debian-openssl-3.0.x", "windows"]
}

// Conexi√≥n a MySQL del servicio de usuarios
datasource db {
  provider = "mysql"
  url      = env("USERS_SERVICE_DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  firstName    String
  lastName     String
  role         String   @db.VarChar(32)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([role])
  @@index([isActive])
  @@index([createdAt])
}

model RolePolicy {
  id          String   @id @default(uuid())
  role        String   @unique @db.VarChar(32)
  permissions Json
  updatedAt   DateTime @updatedAt
}

model RoleMeta {
  id          String   @id @default(uuid())
  role        String   @unique @db.VarChar(32)
  displayName String
  updatedAt   DateTime @updatedAt
}
