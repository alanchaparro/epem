{
  "name": "@epem/patients-service",
  "version": "0.1.0",
  "private": true,
  "description": "Microservicio para gestionar pacientes.",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/main.js",
    "start:prod": "node dist/main.js",
    "lint": "tsc --project tsconfig.json --noEmit",
    "test": "jest --config jest.config.cjs --runInBand",
    "prisma:generate": "dotenv -e ../../.env -- prisma generate",
    "prisma:migrate:dev": "dotenv -e ../../.env -- prisma migrate dev",
    "prisma:migrate": "dotenv -e ../../.env -- prisma migrate deploy",
    "prisma:push": "dotenv -e ../../.env -- prisma db push --accept-data-loss",
    "seed:patients": "ts-node scripts/seed-patients.ts"
  },
  "dependencies": {
    "@epem/nest-common": "workspace:*",
    "@nestjs/axios": "^3.1.3",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.0.4",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.4.2",
    "swagger-ui-express": "^5.0.0",
    "@prisma/client": "^5.10.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.0",
    "prom-client": "^15.1.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "helmet": "^7.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.0.0",
    "dotenv-cli": "^7.4.1",
    "jest": "^29.7.0",
    "prisma": "^5.10.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0"
  }
}
