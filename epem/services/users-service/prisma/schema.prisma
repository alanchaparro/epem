// Genera el cliente en un directorio dedicado del servicio para
// evitar colisiones con otros microservicios en el monorepo.
generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

// Conexi√≥n a MySQL del servicio de usuarios
datasource db {
  provider = "mysql"
  url      = env("USERS_SERVICE_DATABASE_URL")
}

enum UserRole {
  ADMIN
  SUPERVISOR
  DOCTOR
  NURSE
  STAFF
  BILLING
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  firstName    String
  lastName     String
  role         UserRole @default(STAFF)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
